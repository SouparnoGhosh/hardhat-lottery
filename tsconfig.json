{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "hardhat.config.ts",
    "./scripts",
    "./deploy",
    "./deploy-helpers",
    "./test",
    "./typechain"
  ],
  "files": ["./hardhat.config.ts", "./helper-hardhat-config.ts"]
}
